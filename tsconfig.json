{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "./*", "public/*"],
      "icons": ["public/icons"],
      "img": ["public/img"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve", // JSX 설정 변경
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["@react-three/fiber"] // React Three Fiber 타입 추가
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/Frame"],
  "exclude": ["node_modules"]
}
